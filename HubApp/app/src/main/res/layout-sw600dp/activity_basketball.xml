<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tablet_margin_large"
    android:background="?android:colorBackground"
    tools:context=".BasketballActivity">

    <!-- Conteúdo principal rolável -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/reiniciarPartida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/tablet_margin_medium">

            <!-- Coluna Time A -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingEnd="@dimen/tablet_margin_medium">

                <TextView
                    android:id="@+id/timeA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_a"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/tablet_text_display"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="@dimen/tablet_margin_medium" />

                <TextView
                    android:id="@+id/placarTimeA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="64sp"
                    android:textColor="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="@dimen/tablet_margin_large" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tresPontosA"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mais_tres"
                    android:textSize="@dimen/tablet_text_button"
                    android:layout_marginBottom="@dimen/tablet_margin_small" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doisPontosA"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mais_dois"
                    android:textSize="@dimen/tablet_text_button"
                    android:layout_marginBottom="@dimen/tablet_margin_small" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tiroLivreA"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tiro_livre"
                    android:textSize="@dimen/tablet_text_button"
                    android:layout_marginBottom="@dimen/tablet_margin_small" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/negativoA"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/menos_um"
                    android:textSize="@dimen/tablet_text_button"
                    android:layout_marginBottom="@dimen/tablet_margin_large" />
            </LinearLayout>

            <!-- Divisor -->
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="?attr/colorOnSurface"
                android:layout_marginHorizontal="@dimen/tablet_margin_medium" />

            <!-- Coluna Time B -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/tablet_margin_medium">

                <TextView
                    android:id="@+id/timeB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_b"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/tablet_text_display"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="@dimen/tablet_margin_medium" />

                <TextView
                    android:id="@+id/placarTimeB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="64sp"
                    android:textColor="?attr/colorPrimary"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="@dimen/tablet_margin_large" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tresPontosB"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mais_tres"
                    android:textSize="@dimen/tablet_text_button"
                    android:layout_marginBottom="@dimen/tablet_margin_small" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doisPontosB"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mais_dois"
                    android:textSize="@dimen/tablet_text_button"
                    android:layout_marginBottom="@dimen/tablet_margin_small" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tiroLivreB"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tiro_livre"
                    android:textSize="@dimen/tablet_text_button"
                    android:layout_marginBottom="@dimen/tablet_margin_small" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/negativoB"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/menos_um"
                    android:textSize="@dimen/tablet_text_button"
                    android:layout_marginBottom="@dimen/tablet_margin_large" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Botão Reiniciar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/reiniciarPartida"
        style="?attr/materialButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reiniciar_partida"
        android:textSize="@dimen/tablet_text_button"
        android:textColor="?attr/colorOnPrimary"
        app:cornerRadius="@dimen/tablet_button_corner_radius"
        app:backgroundTint="?attr/colorError"
        android:layout_marginBottom="@dimen/tablet_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/btnHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão Home -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHome"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textSize="@dimen/tablet_text_button"
        app:cornerRadius="@dimen/tablet_button_corner_radius"
        android:layout_marginBottom="@dimen/tablet_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
